<%- include("partials/header") %>

    <!-- content -->
    <main class="py-3 py-md-5">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="card">
                <div class="card-header card-title">
                  <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center" style="
    justify-content: space-between;
">
                    <h2 class="mb-0">All Contacts</h2>
                    <div class="ms-md-auto mt-2 mt-md-0">
                      <a href="./add-contact" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add New</a>
                    </div>
                  </div>
                </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%  let no = 1; %>
                      <% contacts.forEach(contact=>{ %>
                        <tr>
                          <td><%= no++ %></td>
                          <td><%= contact.first_name %></td>
                          <td><%= contact.last_name %></td>
                          <td><%= contact.email %></td>
                          <td><%= contact.phone_number %></td>
                          <td>
                            <div class="d-flex justify-content-between">
                              <a href="/contact/<%= contact.id %>" class="btn btn-sm btn-circle btn-outline-info" title="Show"><i class="fa fa-eye"></i></a>
                              <a href="/update/<%= contact.id %>" class="btn btn-sm btn-circle btn-outline-secondary" title="Edit"><i class="fa fa-edit"></i></a>
                              <a href="/delete/<%= contact.id %>" class="btn btn-sm btn-circle btn-outline-danger" title="Delete" onclick="confirm('Are you sure?')"><i class="fa fa-times"></i></a>
                            </div>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include("partials/footer") %>